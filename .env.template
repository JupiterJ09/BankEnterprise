# ======================================
# BASE DE DATOS
# ======================================

# PostgreSQL (Java - Spring Boot)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
POSTGRES_MAX_CONNECTIONS=20

# MongoDB (Node.js - Notificaciones)
MONGODB_URI=
MONGODB_DB=
MONGODB_MAX_POOL_SIZE=10

# Redis (Cache y sesiones)
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=3600


# ======================================
# MESSAGING
# ======================================

# Apache Kafka
KAFKA_BROKERS=
KAFKA_CLIENT_ID=trading-app
KAFKA_GROUP_ID=trading-consumers
KAFKA_AUTO_OFFSET_RESET=earliest

# Kafka Topics
KAFKA_TOPIC_ORDER_CREATED=trading.order.created.v1
KAFKA_TOPIC_ORDER_EXECUTED=trading.order.executed.v1
KAFKA_TOPIC_ORDER_CANCELLED=trading.order.cancelled.v1
KAFKA_TOPIC_TRANSACTION_COMPLETED=transaction.completed.v1
KAFKA_TOPIC_STOCK_PRICE_UPDATED=stock.price.updated.v1


# ======================================
# SERVICIOS BACKEND
# ======================================

# Backend Java (Spring Boot)
JAVA_API_PORT=8080
JAVA_API_BASE_URL=
SPRING_PROFILES_ACTIVE=dev

# Backend Python (FastAPI)
PYTHON_API_PORT=8000
PYTHON_API_BASE_URL=
PYTHON_ENV=development

# Backend Node.js (NestJS)
NODE_API_PORT=3000
NODE_API_BASE_URL=
NODE_ENV=development
WEBSOCKET_PORT=3001


# ======================================
# FRONTEND (Angular)
# ======================================

ANGULAR_PORT=4200
API_BASE_URL=
WS_BASE_URL=


# ======================================
# AUTENTICACIÓN Y SEGURIDAD
# ======================================

# JWT
JWT_SECRET=
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d
JWT_ALGORITHM=HS256

# Bcrypt
